<!-- Search page -->
<div class="container">
    <div class="jumbotron main">
        <div class="offset-md-3">
            <form method="get" action="/graph">
                <div class="form-group">
                    <!-- Input header-->
                    <label>Input Page ID or Username</label>
                    <!-- Page id text box -->
                    <input class="form-control" type="text" style="width:50%;" name="page_id">
                    {{#if searchError}}
                        <svg class="icon icon-cross"><use xlink:href="#icon-cross"></use></svg>
                    {{/if}}
                </div>
                <fieldset class="form-group">
                    <!-- Depth radio buttons -->
                    <legend>Depth</legend>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="depth" value="1" checked>
                            Depth 1
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="depth" value="2">
                            Depth 2
                        </label>
                    </div>
                </fieldset>
                <legend>Filters</legend>
                <!-- Category filters -->
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="category" value="true">
                        Category
                    </label>
                </div>
                <!-- Likes select -->
                <select class="form-control" id="likes" name="likes" style="width:50%;">
                    <option value="" disabled selected>Likes</option>
                    <option value="1000">1000</option>
                    <option value="10000">10000</option>
                    <option value="100000">100000</option>
                    <option value="1000000">1000000</option>
                </select>
                <br>
                <!-- Submit button -->
                <button type="submit" style="width:50%;" class="btn">Submit</button>
            </form>
        </div>
    </div>
</div>